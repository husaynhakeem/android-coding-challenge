<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!--Image-->
        <ImageView
            android:id="@+id/popup_image_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:contentDescription="@string/popup_dialog_image_description"
            android:scaleType="centerCrop" />

        <!--Title-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="@string/title_placeholder"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--Artist-->
        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/artist_loading"
            android:textSize="16sp" />

        <!--Similar images title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="16dp"
            android:text="@string/title_similar_images"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--Similar images-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/similar_image_view1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/popup_dialog_similar_image_description"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_placeholder" />

            <ImageView
                android:id="@+id/similar_image_view2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:contentDescription="@string/popup_dialog_similar_image_description"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_placeholder" />

            <ImageView
                android:id="@+id/similar_image_view3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/popup_dialog_similar_image_description"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_placeholder" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>